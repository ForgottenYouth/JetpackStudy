<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/lifecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Lifecycle"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/hilt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="hilt"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/databinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="databinding"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/viewmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="viewmodel"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <Button
            android:id="@+id/livedata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="livedata"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="room"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/workmanager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="workmanager"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/navigator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="navigator"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/paging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="paging"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <Button
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="CameraX"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <Button
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="UI布局相关"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>